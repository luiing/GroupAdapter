<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >
  <Button android:id="@+id/bt_single"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="SingleRecyclerView"
          android:textAllCaps="false"
  />
  <Button android:id="@+id/bt_double"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="DoubleRecyclerView"
          android:textAllCaps="false"
          android:layout_below="@id/bt_single"
  />
  <Button android:id="@+id/bt_viewpager"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="RecyclerView+ViewPager"
          android:textAllCaps="false"
          android:layout_below="@id/bt_double"
  />
  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_alignParentEnd="true"
          android:padding="5dp"
          android:text="by uis"
  />
</RelativeLayout>
